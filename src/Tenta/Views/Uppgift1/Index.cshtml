@model Tenta.Controllers.Uppgift1Model

<h2> Spara en ny bok</h2>
<br />
<form asp-action="InsertBook" asp-controller="Uppgift1">
    <div class="row">
        <div class="form-group col-sm-12">
            <label asp-for="Title" class="col-sm-1"></label>
            <input asp-for="Title" class="form-control col-sm-8" />
            <span asp-validation-for="Title" class="col-sm-12 col-sm-offset-1 text-danger"></span>
        </div>

        <div class="form-group col-sm-12">
            <label asp-for="Author" class="col-sm-1"></label>
            <input asp-for="Author" class="form-control col-sm-8" />
            <span asp-validation-for="Author" class="col-sm-12 col-sm-offset-1 text-danger"></span>
        </div>

        <div class="form-group col-sm-12">
            <label asp-for="Pages" class="col-sm-1"></label>
            <input asp-for="Pages" class="form-control col-sm-8" />
            <span asp-validation-for="Pages" class="col-sm-12 col-sm-offset-1 text-danger"></span>
        </div>

        <div class="form-group col-sm-12">
            <label asp-for="SelectedCategory" class="col-sm-1"></label>
            <select asp-for="SelectedCategory" class="form-control col-sm-8">
                @foreach (var item in Model.Categories)
                {
                    <option>@item</option>
                }
            </select>
            <span asp-validation-for="SelectedCategory" class="col-sm-12 col-sm-offset-1 text-danger"></span>
        </div>

        <div class="form-group col-sm-12 col-sm-offset-1">
            I lager <input asp-for="IsInStock" type="radio" value="true" />
            Ej i lager <input asp-for="IsInStock" type="radio" value="false" />
            <span asp-validation-for="IsInStock" class="col-sm-12 col-sm-offset-1 text-danger"></span>
        </div>

        <div class="form-group col-sm-offset-1 col-sm-12">
            <input type="submit" value="Spara" class="btn btn-default" />
        </div>
    </div>
</form>
